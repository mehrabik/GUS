<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/policy_action_label"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#002145"
            android:text="Action:"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="4dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/policy_action_value"
            android:textSize="16sp"
            android:text="action"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/policy_domain_label"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#002145"
            android:text="Domain:"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="4dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/policy_domain_value"
            android:textSize="16sp"
            android:text="domain"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/policy_type_label"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#002145"
            android:text="Type:"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="4dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/policy_type_value"
            android:textSize="16sp"
            android:text="type"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/policy_operation_label"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#002145"
            android:text="Operation:"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="4dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/policy_operation_value"
            android:textSize="16sp"
            android:text="operation"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/policy_role_label"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#002145"
            android:text="Role:"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="4dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/policy_role_value"
            android:textSize="16sp"
            android:text="action"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/policy_modality_label"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#002145"
            android:text="Modality:"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="4dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/policy_modality_value"
            android:textSize="16sp"
            android:text="modality"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/policy_confidence_label"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#002145"
            android:text="Confidence:"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="4dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/policy_confidence_value"
            android:textSize="16sp"
            android:text="confidence"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>